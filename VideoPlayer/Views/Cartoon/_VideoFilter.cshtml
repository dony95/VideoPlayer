@model VideoPlayer.Models.CartoonFilterModel

<div class="row">
    <div class="col-md-12">
        <form asp-action="Index" method="post" class="form-inline video-filter">
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder="Pretraga po nazivu"/>
            </div>
            <div class="form-group">
                <select asp-for="Year" asp-items="@(IEnumerable<SelectListItem>)ViewBag.Years" class="form-control">
                    <option value="">--Select--</option>
                </select>
            </div>
            <div class="form-group">
                <select asp-for="Category" asp-items="@(IEnumerable<SelectListItem>)ViewBag.Categories" class="form-control">
                    <option value="">--Select--</option>
                </select>
            </div>
            <div class="form-group">
                <select asp-for="Language" asp-items="@(IEnumerable<SelectListItem>)ViewBag.Languages" class="form-control">
                    <option value="">--Select--</option>
                </select>
            </div>
            &nbsp;&nbsp;&nbsp;
            <button type="button" class="btn btn-default submit-button" onclick="return reset();">Reset</button>
            &nbsp;<button type="button" class="btn btn-default submit-button" id="filterButton">Pretraga</button>
        </form>
    </div>
</div>