@model VideoPlayer.Model.Series
@{
    ViewBag.Title = "Details";

}

@if (Model == null)
{
    <div class="alert alert-danger" role="alert">Ne postoji odabrana serija!</div>
}
else
{
    <div class="jumbotron">
        <div>
            <div class="row">
                <div class="col-xs-8">
                    <h1>@Model.Name (@Model.Year.)</h1>
                    <h3>(@Model.Name_ENG)</h3>
                </div>
                <div class="col-xs-4 text-right" style="padding-top:20px;">
                    <a href="@Model.ImdbURL" target="_blank"><img src="https://bigsonia.com/wp-content/uploads/imbd-1.png" /></a>
                    <a href="@Model.TrailerURL" target="_blank"><img src="http://luckyline.com/wp-content/plugins/accesspress-social-icons/icon-sets/png/set1/youtube.png" /></a>
                </div>
            </div>
        </div>
        <h4>
            @foreach (var category in Model.Categories)
            {
                <span>@category.ToString()</span>
            }
        </h4>
        <br />
        <p>@Model.Description</p>
    </div>
    <div class="panel panel-heading">
        <div class="row">
            <div class="col-xs-8">
                <h3>Popis sezona</h3>
            </div>
            <div class="col-xs-4 text-right">
                <a href="@Url.Action("CreateSeason", new { seriesID = Model.ID })" style="margin-top: 20px;" class="btn btn-success">Dodaj sezonu</a>
            </div>
        </div>
    </div>
    @if (Model.Seasons != null)
    {
        if (Model.Seasons.Count > 0)
        {
            foreach (var season in Model.Seasons)
            {
                <button id="@season.SeasonNumber">@String.Concat("Sezona", season.SeasonNumber)</button>
            }
        }
        else
        {

        }
    }

    <a asp-action="Edit" asp-route-id="@Model.ID">Uredi</a>
}


@section scripts
    {
    <style type="text/css">
        a.classname {
            color: red;
            background-color: aqua;
            display: block;
            width: 150px;
            height: 150px;
            text-indent: -9999px; /* hides the link text */
        }
    </style>

}

