@model VideoPlayer.Model.Season


<div class="form-horizontal" asp-validation-summary="All">
    <div class="form-group">
        <label asp-for="Name"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="SeasonNumber"></label>
        <div class="col-md-10">
            <input asp-for="SeasonNumber" class="form-control" />
            <span asp-validation-for="SeasonNumber"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Year"></label>
        <div class="col-md-10">
            <select asp-for="Year" asp-items="@(IEnumerable<SelectListItem>)ViewBag.Years" class="form-control">
                <option value="">--Select--</option>
            </select>
            <span asp-validation-for="Year"></span>
        </div>
    </div>
</div>
<div class="form-group">
    <label asp-for="Description"></label>
    <div class="col-md-10">
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description"></span>
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</div>